{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-demo-web-core/config": [
        "libs/@angular-demo/web/@core/config/src/index.ts"
      ],
      "@ng-demo-web-core/error-handling": [
        "libs/@angular-demo/web/@core/error-handling/src/index.ts"
      ],
      "@ng-demo-web-core/config/constants": [
        "libs/@angular-demo/web/@core/config/constants/src/index.ts"
      ],
      "@ng-demo-web-core/config/images": [
        "libs/@angular-demo/web/@core/config/images/src/index.ts"
      ],
      "@nx-adventures/shortcuts-plugin": [
        "tools/shortcuts-plugin/src/index.ts"
      ],
      "@nx-adventures/generators-utils": [
        "libs/tools/generators/utils/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
